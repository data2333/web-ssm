<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.heitian.ssm.dao.PostsDao">
    <resultMap id="PostsBaseMap" type="com.heitian.ssm.model.Posts">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="tittle" jdbcType="VARCHAR" property="tittle"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="time" jdbcType="VARCHAR" property="time"/>
        <result column="imageAddress" jdbcType="VARCHAR" property="imageAddress"/>
        <result column="kind" jdbcType="VARCHAR" property="kind"/>
    </resultMap>

    <select id="getAll" parameterType="java.lang.String" resultType="com.heitian.ssm.model.Posts">
        SELECT * FROM post WHERE kind=#{kind} order by time
    </select>
    <select id="getAllPosts" resultType="com.heitian.ssm.model.Posts">
        SELECT * FROM post
    </select>
</mapper>